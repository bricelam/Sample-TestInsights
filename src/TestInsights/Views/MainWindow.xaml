<Window x:Class="TestInsights.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestInsights"
        xmlns:vm="clr-namespace:TestInsights.ViewModels"
        xmlns:v="clr-namespace:TestInsights.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <StackPanel>
        <DatePicker SelectedDate="{Binding Start}" />
        <DatePicker SelectedDate="{Binding End}" />
        <TextBox Text="{Binding Search}" />
        <Button Command="{Binding RefreshCommand}">Refresh</Button>
        <v:DetailsPanel DataContext="{Binding SelectedItem}" />
    </StackPanel>
</Window>
